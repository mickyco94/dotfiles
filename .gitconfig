

[alias]
	new = "!f() { git checkout -b $USER/$1; }; f"
	wipe = "reset head --hard"
	root = rev-parse --show-toplevel
	co = checkout
	ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"

[push]
	default = nothing
[core]
	ignorecase = false
	editor = nvim
	pager = delta
	hooksPath = /usr/local/gitconfig/hooks/

[interactive]
	diffFilter = delta --color-only

[delta]
	line-numbers = true
	navigate = true
	light = false
	side-by-side = true

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[user]
	name = Micky Clerkin-Oliver
	email = mclerkinoliver@confluent.io

[url "git@github.com:"]
	insteadOf = https://github.com/

[advice]
	pushNonFastForward = false
